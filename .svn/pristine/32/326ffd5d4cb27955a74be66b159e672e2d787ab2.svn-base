	<script charset="UTF-8" type="text/javascript">
		mui.init();
		$("#searchCode2").click(function(){
			var searchName = $("#searchName").val();
			if(searchName == ""){
				alert("请输入搜索商品名称")
			}else{
				setTimeout(function(){
					mui.openWindow({
						url: 'stage/discountgo/search_proud.html?searchName='+searchName,
						id: 'search_proud',
						showType: 'zoom-fade-out',
						showTime: 200
					});
				},200); 
			 $("#searchName").val("");
			}
		});
		function getAdvertByStatus(location){
   			var url = "advert/lbList.do";
   			var data = {
   					location:location
   		    };
   			async = false;
   			var result = ajaxSubmit(url, data, async);
   			console.log(result)
   			return result;
   		}
		var getAdvertByStatus_ =getAdvertByStatus("zc_tj");
		getAdvertByStatus_banner = JSON.parse(getAdvertByStatus_);
		var special1_Img = "";
		var starok ="";
		var url="";
		$("#special1").empty();
		for(var i = 0; i <getAdvertByStatus_banner.length; i++){
			if(getAdvertByStatus_banner[i].ad_url ==""){
				starok =0;
				url =0
			}else{
				starok =1;
				url =getAdvertByStatus_banner[i].ad_url
			}
			special1_Img +="<div  onclick=\"pakuan('"+starok+"','"+url+"')\" class='mui-col-xs-6 specLink'>"
											+"<img src='"+getAdvertByStatus_banner[i].ad_path+"' />"
										+"</div>"//"<div  onclick=\"javascript:window.location.href='"+getAdvertByStatus_banner[i].ad_url+"'\" class='swiper-slide' style='background-image:url("++")'></div>";
		 }
		 $("#special1").append(special1_Img);
		 function pakuan(starok,url){
				if(starok == 0 && url ==0){
					window.location.href="stage/discountgo/specialevent.html";
				}else{
					window.location.href=url;
				}
			}
	</script>

