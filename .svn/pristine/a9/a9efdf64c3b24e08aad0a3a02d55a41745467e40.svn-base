	<script>
		mui.init();
		//区域滚动
		mui('.mui-scroll-wrapper').scroll({
			deceleration: 0.0005 ,//flick 减速系数，系数越大，滚动速度越慢，滚动距离越小，默认值0.0006
			indicators: false
		});
		/**
		 * 轮播图集合（one_lb,zzh_lb,long_lb,sr_lb,dfh_lb）(首页轮播、周周惠轮播、龙支付轮播、善融轮播、地方汇轮播)
		 * @param location
		 * @param response
		 * @return
		 * @throws IOException 
		 */
		function getAdvertByStatus(location){
			var url = "advert/lbList.do";
			var data = {
					location:location
		    };
			async = false;
			var result = ajaxSubmit(url, data, async);
			//console.log(result)
			return result;
		}
		/* 团购商品类别 */
		 //让指定的DIV始终显示在屏幕正中间   
            left_w=($(document).width()-$('#loadingicon').width())/2;  
            top_w = $('html').scrollTop()+($(window).height()-$('#loadingicon').height())/2;  
            $('#loadingicon').offset({top:top_w,left:left_w});  
            $('#loadingicon').show();
	   		$('#loadingicon').offset({top:top_w,left:left_w});  
	   		setTimeout(function(){
	   			$('#loadingicon').hide();
	   			tuangouType();
	   			bannerTuanGou();
			},200);
		var Type_id=0;
		function tuangouType(){
			/**
			 * 获取类别集合
			 * @param response
			 * @return
			 * @throws IOException
			 */
			 var typeList_ =typeList();
			// console.log("获取类别集合"+typeList_);
			 typeList_ = JSON.parse(typeList_);
			 $("#ListNavService").empty();
			 var tuangouTypeList ="";
            tuangouTypeList ="<li id='0'>全部</li>";
			 for(var  i = 0 ; i < typeList_.length; i++){
				 tuangouTypeList +="<li id='"+typeList_[i].id+"'>"+typeList_[i].name+"</li>";
			 }
			 $("#ListNavService").append(tuangouTypeList);
			 //团购分类左边导航对应点击样式
			 $("ul#ListNavService li").eq(0).addClass("navLocalOk");
			 //团购默认第一个
			 	Type_id =$("ul#ListNavService li").eq(0).attr("id");
			 getBytuanGouListAll(Type_id);
			 $("ul#ListNavService li").click(function() {
				$("ul#ListNavService  li").removeClass("navLocalOk"); //siblings是循环遍历
				$(this).addClass("navLocalOk");
                 Type_id =$(this).attr("id");
                $('#loadingicon').show();
	   		    $('#loadingicon').offset({top:top_w,left:left_w});  
	   		     setTimeout(function(){
	   			        $('#loadingicon').hide();
	   			     getBytuanGouListAll(Type_id);
	   		 	},300);
               
			 });
		}
        var curpage =1;
        //console.log(shopGoods_html);
        //根据分页显示商品数据方法
        $("#MAPstar").css("display","block");

        //分页数据模板
        //首页 #shouyeBtns
        $("#shouyeBtns").click(function(){

            $("#MAPstar").css("display","none");
            setTimeout(function(){
                $('#loadingicon').hide();
                //根据分页显示商品数据方法
                getBytuanGouListAll(Type_id,curpage)
                $("#MAPstar").css("display","block");

            },300);
        });
        //上一页  #PagPrevious
        $("#PagPrevious").click(function(){
            var curpage = $(this).attr("currentPage");
            var pagecount=$(this).attr("pagecount");
            curpage--;
            if(curpage < 1){
                alert("没有数据啦")
                return;
            }else{

                $("#MAPstar").css("display","none");
                setTimeout(function(){
                    $('#loadingicon').hide();
                    //根据分页显示商品数据方法
                    getBytuanGouListAll(Type_id,curpage)
                    $("#MAPstar").css("display","block");

                },300);
            }

        });
        //下一页 #PagNext
        $("#PagNext").click(function(){
            var curpage = $(this).attr("currentPage");
            var pagecount=$(this).attr("pagecount");
            curpage++;
            if(curpage > pagecount){
                alert("没有数据啦")
                return;
            }else{

                $("#MAPstar").css("display","none");
                setTimeout(function(){
                    $('#loadingicon').hide();
                    //根据分页显示商品数据方法
                    getBytuanGouListAll(Type_id,curpage)
                    $("#MAPstar").css("display","block");

                },300);
            }

        });
        //尾页 #pagGtover
        $("#pagGtover").click(function(){
            var curpage = $(this).attr("pagecount");

            $("#MAPstar").css("display","none");
            setTimeout(function(){
                $('#loadingicon').hide();
                //根据分页显示商品数据方法
                getBytuanGouListAll(Type_id,curpage)
                $("#MAPstar").css("display","block");

            },300);
        });
		/**
		 * 获取团购商品列表
		 * @param response
		 * @return
		 * @throws IOException 
		 */
		 function getBytuanGouListAll(Type_id,curpage){
			 var  getBytuanGouList_ =getBytuanGouList(Type_id,curpage);
			// console.log("获取团购商品列表"+getBytuanGouList_);
			 getBytuanGouList_ = JSON.parse(getBytuanGouList_);
			 //console.log(getBytuanGouList_);
            $("#currentPage").html(getBytuanGouList_[0].page.currentPage)//第几页
            $("#PagPrevious").attr("currentPage",getBytuanGouList_[0].page.currentPage)//上一页
            $("#PagNext").attr("currentPage",getBytuanGouList_[0].page.currentPage)//上一页
            $("#pagGtover").attr("currentPage",getBytuanGouList_[0].page.currentPage)//尾页
            $("#PagPrevious").attr("pageCount",getBytuanGouList_[0].page.pageCount)//上一页
            $("#PagNext").attr("pageCount",getBytuanGouList_[0].page.pageCount)//上一页
            $("#pagGtover").attr("pageCount",getBytuanGouList_[0].page.pageCount)//尾页
			 $("#tuangoushopListTypeAll").empty();
			 var tuangoushopListTypeAllHtml_ ="";
			 for(var i = 0 ; i < getBytuanGouList_[0].list.length; i++){
				 /**
				  *根据团购ID获取团购详情  
				  *里面包含 goods_id
				  * @param id
				  * @param response
				  * @return
				  * @throws IOException
				  */
				  var  getBytuanGouId_ =getBytuanGouId(getBytuanGouList_[0].list[i].id);
				  //console.log("根据团购ID获取团购详情"+getBytuanGouId_);
				  getBytuanGouId_ = JSON.parse(getBytuanGouId_);
				 // console.log(getBytuanGouId_);
				  /**
				   * 根据商品ID获取商品详情
				   * @param goodsId
				   * @param response
				   * @return
				   * @throws IOException
				   */
				    var getGoodsByGoodsId_ =getGoodsByGoodsId(getBytuanGouId_.goods_id)
				   // console.log("根据商品ID获取商品详情"+getGoodsByGoodsId_); 
				    getGoodsByGoodsId_ = JSON.parse(getGoodsByGoodsId_);
				  //  console.log(getGoodsByGoodsId_);    
				    tuangoushopListTypeAllHtml_ +="<div id='"+getGoodsByGoodsId_.id+"' class='mui-col-xs-6 dssssdf'>"
														+"<img src='"+getGoodsByGoodsId_.picture_address+"' />"
														+"<p>"+getGoodsByGoodsId_.goods_name+"</p>"
														+"<dt>有效期:<span>"+getBytuanGouList_[0].list[i].end_time+"</span></dt>"
														+"<div class='picdetails'>优惠价：¥<span>"+getBytuanGouList_[0].list[i].real_price+"元</span></div>"
														+"<dd class='clearfix'>"
															+"<del>市场价："+getGoodsByGoodsId_.cost_price+"元</del>"
														+"</dd>"
														+"<button class='picBttns'>拼团购买</button>"
													+"</div>"; 
			 }
			 $("#tuangoushopListTypeAll").append(tuangoushopListTypeAllHtml_);
			 
				
	         //跳转对应的商品详情     
	         var abc = $(".dssssdf")
				for (var i = 0; i < abc.length; i++) {
				    (function(e){  //自执行函数实时把i传入e
				        abc[e].onclick=function(){  //  通过传入的e获取到哪个按钮发生了点击事件
				        	 var shop_details_Id =$(this).attr("id");
	                         setTimeout(function(){
								mui.openWindow({
									url: "details.html?id="+shop_details_Id+"&part=0",
									id: 'details',
									showType: 'zoom-fade-out',
									showTime: 200
								});
							},200); 
				        }
				    })(i)    
				};   //采用闭包和自执行函数获取i
			 
		}
		 //获取团购的轮播图
		function bannerTuanGou(){
			var getAdvertByStatus_banner =getAdvertByStatus("tg_lb");
			//console.log(getAdvertByStatus_banner);
			getAdvertByStatus_banner = JSON.parse(getAdvertByStatus_banner);
			var shop_fenglei_Img = "";
			$("#shop_Img_new").empty();
			for(var i = 0; i <getAdvertByStatus_banner.length; i++){
				 shop_fenglei_Img +="<div  onclick=\"javascript:window.location.href='"+getAdvertByStatus_banner[i].ad_url+"'\" class='swiper-slide' style='background-image:url("+getAdvertByStatus_banner[i].ad_path+")'></div>";
			 }
			 $("#shop_Img_new").append(shop_fenglei_Img);
			//轮播图
				var swiper = new Swiper('.swiper-container', {
					pagination: '.swiper-pagination',
					paginationClickable: '.swiper-pagination',
					loop: true,
					spaceBetween: 30,
					autoplay: 2500,
					autoplayDisableOnInteraction: false,
					effect: 'fade'
				});
		}
	</script>

